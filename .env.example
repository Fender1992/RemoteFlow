# ===========================================
# RemoteFlow / JobIQ Environment Variables
# ===========================================

# --- Supabase ---
NEXT_PUBLIC_SUPABASE_URL=https://your-project.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=your-anon-key
SUPABASE_SERVICE_ROLE_KEY=your-service-role-key

# --- App ---
NEXT_PUBLIC_APP_URL=https://your-app.vercel.app

# --- Cron Authentication ---
# Required. Cron routes reject requests when this is unset (fail-closed).
CRON_SECRET=generate-a-random-secret

# --- Encryption ---
# 32-byte key for AES-256-GCM encryption of API keys at rest.
# Generate with: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))"
ENCRYPTION_KEY=

# --- CacheGPT (AI Job Chat) ---
# Platform-level API key for max/enterprise tier users.
CACHEGPT_PLATFORM_API_KEY=

# --- Email (Resend) ---
RESEND_API_KEY=re_your_api_key
EMAIL_FROM_ADDRESS=JobIQ <notifications@your-domain.com>

# --- Error Tracking (Sentry) ---
SENTRY_DSN=
SENTRY_AUTH_TOKEN=
NEXT_PUBLIC_SENTRY_DSN=

# --- Analytics ---
# Vercel Analytics is auto-configured on Vercel deployments.
